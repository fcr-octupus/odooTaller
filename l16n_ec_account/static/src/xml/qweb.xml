        <table style="width: 100%;">
            <tbody>
                <t t-foreach="lines" t-as="line">
                    <tr>
                        <td class="ec_tax_vat_bases_name">
                            <t t-esc="line[0]"/>:
                        </td>
                        <td class="ec_tax_vat_bases" t-att-data-tax-group-id="line[3]">
